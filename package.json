{
  "name": "portfolio-fullstack",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install-all": "npm install --prefix client && npm install --prefix server",
    "build": "npm run build --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "npm start --prefix server",
    "client": "npm start --prefix client",
    "generate": "npx prisma generate --schema=server/prisma/schema.prisma",
    "start": "npm run build && npm run generate && npm run server"
  },
  "dependencies": {
    "concurrently": "^8.2.0"
  }
}
