generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model About {
  id   Int    @id @default(autoincrement())
  info String
}

model User {
  id       Int    @id @default(autoincrement())
  fullName String
  email    String @unique
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  tech_stack  String?
  github_url  String?
  live_url    String?
  created_at  DateTime @default(now())
}

model Skill {
  id    Int    @id @default(autoincrement())
  name  String @unique
  level String
}

model Experience {
  id          Int      @id @default(autoincrement())
  company     String
  role        String
  start_date  DateTime
  end_date    DateTime
  description String?
}

model Education {
  id             Int    @id @default(autoincrement())
  institution    String
  degree         String
  field_of_study String
  start_year     Int
  end_year       Int
}

model Certification {
  id             Int      @id @default(autoincrement())
  title          String
  issuer         String
  issue_date     DateTime
  credential_url String?
}

model Contact {
  id      Int     @id @default(autoincrement())
  name    String
  email   String
  subject String?
  message String
  reply   String? @default("Not replied yet")
}

model Blog {
  id      Int    @id @default(autoincrement())
  title   String
  content String
  author  String
}
